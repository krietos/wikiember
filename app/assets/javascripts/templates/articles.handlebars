<div class="row"><h1>Articles</h1></div>



<div class="row">
  <div class="col-sm-6">
    <p>{{#link-to 'new_article'}}New Article{{/link-to}}</p>

    <ul>
      {{#each article in controller}}
        <li>
          {{#link-to 'article' article}}
            {{article.title}}
          {{/link-to}}
        </li>
      {{/each}}
    <ul>
  </div>

  <div class="col-sm-6">
    {{outlet}}
  </div>
</div>
